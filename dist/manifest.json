{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "Nick's Youtube Playback Extension",
  "description": "This is a chrome extension that allows you to set and save playback speed for specific Youtube channels and global defaults.",
  "icons": {
    "64": "public/logo64.png"
  },
  "action": {
    "default_popup": "dist/js/index.html",
    "default_title": "React Chrome Extension"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "nativeMessaging",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "js": [
        "./build/static/js/content.js"
      ],
      "all_frames": false,
      "run_at": "document_end"
    }
  ]
}